<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_course_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exercise.fmart43.degreetracker.activities.AddCourseActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/et_addcourse_startdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:inputType="date"
                android:maxLength="10"
                app:layout_constraintBottom_toBottomOf="@+id/message2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message2"
                app:layout_constraintTop_toTopOf="@+id/message2" />

            <EditText
                android:id="@+id/et_addcourse_enddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:inputType="date"
                android:maxLength="10"
                app:layout_constraintBottom_toBottomOf="@+id/message3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message3"
                app:layout_constraintTop_toTopOf="@+id/message3" />

            <TextView
                android:id="@+id/message"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/message2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="40dp"
                android:text="Start Date"
                app:layout_constraintEnd_toStartOf="@+id/et_addcourse_title"
                app:layout_constraintStart_toStartOf="@+id/message"
                app:layout_constraintTop_toBottomOf="@+id/message" />

            <TextView
                android:id="@+id/message3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="End Date"
                app:layout_constraintEnd_toEndOf="@+id/message2"
                app:layout_constraintStart_toStartOf="@+id/message2"
                app:layout_constraintTop_toBottomOf="@+id/message2" />

            <TextView
                android:id="@+id/message4"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:text="Status"
                app:layout_constraintEnd_toEndOf="@+id/message3"
                app:layout_constraintStart_toStartOf="@+id/message3"
                app:layout_constraintTop_toBottomOf="@+id/message3" />

            <TextView
                android:id="@+id/message8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="40dp"
                android:text="Term Assigned"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/message7"
                app:layout_constraintStart_toStartOf="@+id/message7"
                app:layout_constraintTop_toBottomOf="@+id/message7" />

            <TextView
                android:id="@+id/message5"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:text="Mentor"
                app:layout_constraintEnd_toEndOf="@+id/message4"
                app:layout_constraintStart_toStartOf="@+id/message4"
                app:layout_constraintTop_toBottomOf="@+id/message4" />

            <TextView
                android:id="@+id/message6"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:text="Phone"
                app:layout_constraintEnd_toEndOf="@+id/message5"
                app:layout_constraintStart_toStartOf="@+id/message5"
                app:layout_constraintTop_toBottomOf="@+id/message5" />

            <TextView
                android:id="@+id/message7"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:text="Email"
                app:layout_constraintEnd_toEndOf="@+id/message6"
                app:layout_constraintStart_toStartOf="@+id/message6"
                app:layout_constraintTop_toBottomOf="@+id/message6" />

            <EditText
                android:id="@+id/et_addcourse_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:maxLength="40"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message"
                app:layout_constraintTop_toTopOf="@+id/message" />

            <EditText
                android:id="@+id/et_addcourse_mentor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:maxLength="40"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/message5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message5"
                app:layout_constraintTop_toTopOf="@+id/message5" />

            <EditText
                android:id="@+id/et_addcourse_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:ems="10"
                android:maxLength="15"
                android:inputType="phone"
                app:layout_constraintBottom_toBottomOf="@+id/message6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message6"
                app:layout_constraintTop_toTopOf="@+id/message6" />

            <EditText
                android:id="@+id/et_addcourse_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toBottomOf="@+id/message7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message7"
                app:layout_constraintTop_toTopOf="@+id/message7" />

            <Spinner
                android:id="@+id/sp_addcourse_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/message4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/message4"
                app:layout_constraintTop_toTopOf="@+id/message4"
                app:layout_constraintVertical_bias="0.715" />

            <Spinner
                android:id="@+id/sp_addcourse_term"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/message8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/message8"
                app:layout_constraintTop_toTopOf="@+id/message8"
                app:layout_constraintVertical_bias="0.715" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
</android.support.constraint.ConstraintLayout>