<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="Labels">
        <item name="android:background">@drawable/backgroud_label_fab</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityItemMain">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ActivityItemSmall" parent="ActivityItemMain">
        <item name="android:layout_height">100dp</item>"
    </style>

    <style name="TitleLabel">
        <item name="android:textSize">@dimen/title_item_font_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="TitleItemLabel" parent="TitleLabel">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
    </style>

    <style name="Title2ItemLabel" parent="TitleItemLabel">
        <item name="android:textSize">@dimen/title2_item_font_size</item>
    </style>

    <style name="TextItemLabel">
        <item name="android:textSize">@dimen/text_item_font_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DetailTitleLabel" parent="TitleLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/colorPrimaryLight</item>
    </style>

    <style name="TextDetailLabel" parent="TextItemLabel">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDetailLabelSmall" parent="TextDetailLabel">
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>



    <style name="DegreeFloatAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="DetailScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">115dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListDetailScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/min_width_recyclerview</item>
    </style>

    <style name="ListSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ListItemDetailPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_font_size_smaller</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="SecondaryListItemDetailPage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_font_size_smallest</item>
        <item name="android:textColor">@color/colorSecundaryText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
